{
   "AWSTemplateFormatVersion" : "2010-09-09",
   "Resources" : {
      "VPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": "10.0.0.0/16",
				"Tags": [{
					"Key": "Application",
					"Value": {
						"Ref": "AWS::StackId"
					}
				}]
			}
		},

      "InternetGateway": {
			"Type": "AWS::EC2::InternetGateway",
			"Properties": {
				"Tags": [{
					"Key": "Application",
					"Value": {
						"Ref": "AWS::StackId"
					}
				}]
			}
		},

	  "AttachGateway": {
			"Type": "AWS::EC2::VPCGatewayAttachment",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"InternetGatewayId": {
					"Ref": "InternetGateway"
				}
			}
		},

	  "RouteTable": {
	  			"Type": "AWS::EC2::RouteTable",
	  			"Properties": {
	  				"VpcId": {
	  					"Ref": "VPC"
	  				},
	  				"Tags": [{
	  					"Key": "Application",
	  					"Value": {
	  						"Ref": "AWS::StackId"
	  					}
	  				}]
	  			}
	  		},

	"Route": {
		"Type": "AWS::EC2::Route",
		"DependsOn": "AttachGateway",
		"Properties": {
			"RouteTableId": {
				"Ref": "RouteTable"
			},
			"DestinationCidrBlock": "0.0.0.0/0",
			"GatewayId": {
				"Ref": "InternetGateway"
			}
		}
	}
		
   }
} 